<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank_screen"
    android:orientation="vertical"
    android:paddingLeft="@dimen/store_p_activity_vertical_margin"
    android:paddingTop="@dimen/store_p_activity_vertical_margin"
    android:paddingRight="@dimen/store_p_activity_vertical_margin"
    android:paddingBottom="@dimen/store_p_activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dailyentry.AttendanceActivity"
    tools:showIn="@layout/activity_attendance">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/text_25dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="08dp"
                android:text="Selected : "
                android:textColor="@color/grayfor_login"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/selectedtext_attendee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_25dp"
                android:layout_marginTop="@dimen/custom_margin"
                android:layout_marginRight="@dimen/text_25dp"
                android:background="@drawable/rouded_corner_pinki"
                android:padding="@dimen/appbar_padding_top"
                android:textColor="@color/grayfor_login"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_14sp"
                android:padding="08dp"
                android:text="Tap to select"
                android:textColor="@color/grayfor_login"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">

                <ImageView
                    android:id="@+id/btn_present"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/present" />

                <ImageView
                    android:id="@+id/btn_leave"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/leave" />

                <ImageView
                    android:id="@+id/btn_weekoff"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/weekoff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_margin"
                android:orientation="horizontal"
                android:weightSum="9">

                <ImageView
                    android:id="@+id/btn_meeting"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/meeting" />

                <ImageView
                    android:id="@+id/btn_training"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/training" />

                <ImageView
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/intime_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_14sp"
                android:layout_marginTop="@dimen/custom_margin"
                android:layout_marginBottom="@dimen/custom_margin"
                android:padding="06dp"
                android:text=""
                android:textColor="@color/grayfor_login"
                android:textSize="@dimen/text_14sp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_margin"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_18dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/text_14sp"
                    android:gravity="center_vertical"
                    android:padding="08dp"
                    android:text="Check - In Check - out Histry"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/text_25dp"
                    android:layout_marginRight="@dimen/text_25dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/grayfor_login" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/attendance_histry_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" />
    </LinearLayout>


</LinearLayout>
