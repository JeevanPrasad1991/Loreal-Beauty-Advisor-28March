<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_18dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Header"
                android:textColor="@color/grayfor_login"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_13sp"
                android:layout_marginTop="@dimen/padding_standard"
                android:layout_marginRight="@dimen/text_size_13sp"
                android:layout_marginBottom="@dimen/padding_standard"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Picture"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Picture"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Exists"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/store_entry_text_size"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/posm_btn_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/rouded_corner_pinki"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Yes"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/posm_btn_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/rouded_corner_pinki"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="No"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_child_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_size_13sp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Picture"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/store_entry_text_size"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/img_promotion"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:src="@mipmap/camera_orange" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/promotion_rl_non"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/text22dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/promotion_spin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:id="@+id/reference_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/custom_layout_margin"
                android:layout_marginTop="@dimen/custom_margin"
                android:layout_marginRight="@dimen/custom_layout_margin"
                android:layout_marginBottom="@dimen/custom_margin"
                android:gravity="right"
                android:padding="6dp"
                android:text="Reference Image"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_13sp"
                android:textStyle="normal" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>