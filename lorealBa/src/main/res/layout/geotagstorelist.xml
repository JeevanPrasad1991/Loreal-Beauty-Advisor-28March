<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="@color/storelist"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/storenamelistview_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="08sp">

            <ImageView
                android:id="@+id/storelistviewxml_storeico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="06sp"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/storelistviewxml_store_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/storelistviewxml_storeico"
                android:layout_toRightOf="@+id/storelistviewxml_storeico"
                android:text="fdfdfdff"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/storelist_storename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storelistviewxml_store_id"
                android:layout_alignLeft="@+id/storelistviewxml_store_id"
                android:layout_marginTop="5dp"
                android:text="addd"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storelistviewxml_storeaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storelist_storename"
                android:layout_alignLeft="@+id/storelist_storename"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:text="addd"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="normal" />


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/storelist_storename"
                android:layout_alignParentRight="true"
                android:background="@mipmap/geotag_grey"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>