<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/report_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/cust_mer36" />

                <TextView
                    android:id="@+id/txt_bar_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Scan Code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/txt_enterbar_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Enter Scan Code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_14sp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl_bar_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/qrcode_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/grayfor_login"
                        android:textSize="@dimen/store_entry_text_size"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/img_bar_code"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_gravity="center"
                        android:layout_marginTop="03dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:src="@drawable/bar_code"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/RL_scan_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Enter Scan Code"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/store_entry_text_size"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edt_scan_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4.5"
                    android:background="@drawable/rouded_corner_pinki"
                    android:gravity="center_vertical"
                    android:hint="Bar Code"
                    android:inputType="number"
                    android:maxLength="20"
                    android:padding="08dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Quantity"
                    android:textColor="@color/grayfor_login"
                    android:textSize="@dimen/store_entry_text_size"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/edt_proforma_sku_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4.5"
                    android:background="@drawable/rouded_corner_pinki"
                    android:gravity="center_vertical"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/cancet_btn"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:src="@drawable/cancel_btn" />

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="137px"
                    android:layout_height="67px"
                    android:layout_weight="5"
                    android:src="@drawable/add_btn" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>